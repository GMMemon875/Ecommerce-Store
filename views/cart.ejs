<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="../styles/cart.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include('partials/MenuHeader.ejs') %>

    <hr />

    <div class="product-section">
      <%user.cart.forEach(function(item){ %>
      <div class="image flex items-center">
        <img
          class="w-40"
          src="data:image/jpeg;base64,<%= item.image.toString(`base64`) %>"
          alt=""
        />
        <div class="flex-1 ml-4">
          <h1>Supreem</h1>
          <span>Medum</span>
        </div>
        <span class="flex-1">1pc</span>
        <span class="price">pkr300</span>
      </div>
      <% }) %>
    </div>
  </body>
</html>
